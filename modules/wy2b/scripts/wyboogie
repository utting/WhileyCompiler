#!/usr/bin/env bash
if [[ "$#" > 0 ]]
then
    WY2BHOME=/Users/utting/git/WhileyCompiler/modules/wy2b
    for w in "$@"
    do
	echo "===== $w ====="
	java -jar $HOME/bin/whiley2boogie.jar "$w" &&
	boogie /timeLimit:10 $WY2BHOME/wval.bpl ${w%.whiley}.bpl
    done
else
    echo "Usage: $0 *.whiley"
fi

